{
    "builders": [
        {
            "name": "vagrant",
            "type": "virtualbox-iso",
            "guest_os_type": "Debian_64",
            "format": "ovf",
            "headless": true,
            "iso_urls": [
                "http://cdimage.debian.org/debian-cd/8.6.0/amd64/iso-cd/debian-8.6.0-amd64-netinst.iso"
            ],
            "iso_checksum": "e9f61bf327db6d8f7cee05a99f2353cc",
            "iso_checksum_type": "md5",
            "disk_size": 65536,
            "hard_drive_interface": "sata",
            "ssh_username": "root",
            "ssh_wait_timeout": "30m",
            "shutdown_command": "/sbin/shutdown -h now",
            "http_directory": ".",
            "boot_command": [
                "<esc><wait>",
                "install <wait>",
                "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
                "debian-installer=en_US <wait>",
                "auto <wait>",
                "locale=en_US <wait>",
                "kbd-chooser/method=us <wait>",
                "netcfg/get_hostname=debian <wait>",
                "netcfg/get_domain= <wait>",
                "fb=false <wait>",
                "debconf/frontend=noninteractive <wait>",
                "console-setup/ask_detect=false <wait>",
                "console-keymaps-at/keymap=us <wait>",
                "keyboard-configuration/xkb-keymap=us <wait>",
                "<enter><wait>"
            ],
            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--memory", "1024"],
                ["modifyvm", "{{.Name}}", "--cpus", "1"]
            ],
            "vm_name": "{{user `image`}}-{{user `image_env`}}-debian-{{user `image_version_major`}}.{{user `image_version_minor`}}.{{user `image_version_patch`}}"
        },
        {
            "name": "docker",
            "type": "docker",
            "image": "debian:jessie",
            "pull": true,
            "commit": true,
            "author": "Manala <contact@manala.io>",
            "changes": [
                "USER app",
                "WORKDIR /srv/app"
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "scripts": [
                "scripts/apt.sh",
                "scripts/ansible.sh",
                "scripts/nfs.sh"
            ],
            "environment_vars": [
                "ENV={{user `image_env`}}"
            ]
        },
        {
            "type": "shell",
            "scripts": [
                "scripts/grub.sh",
                "scripts/virtualbox.sh"
            ],
            "only": ["vagrant"]
        },
        {
            "type": "ansible-local",
            "playbook_file": "ansible/setup.yml",
            "galaxy_file": "ansible/roles/requirements.yml"
        },
        {
            "type": "ansible-local",
            "playbook_file": "ansible/app.yml",
            "extra_arguments": [
                "--extra-vars",
                "'image=\"{{user `image`}}\" image_description=\"{{user `image_description`}}\" image_version=\"{{user `image_version_major`}}.{{user `image_version_minor`}}.{{user `image_version_patch`}}\" env=\"{{user `image_env`}}\"'"
            ]
        },
        {
            "type": "shell",
            "scripts": [
                "scripts/clean.sh"
            ]
        },
        {
            "type": "shell",
            "scripts": [
                "scripts/clean-disk.sh"
            ],
            "only": ["vagrant"]
        }
    ],
    "post-processors": [
        [
            {
                "type": "vagrant",
                "output": "{{user `image`}}-{{user `image_env`}}-debian-{{user `image_version_major`}}.{{user `image_version_minor`}}.{{user `image_version_patch`}}-virtualbox.box",
                "compression_level": 9,
                "only": ["vagrant"]
            },
            {
                "type": "docker-tag",
                "repository": "manala/{{user `image`}}-{{user `image_env`}}-debian",
                "tag": "{{user `image_version_major`}}.{{user `image_version_minor`}}",
                "only": ["docker"]
            },
            {
                "type": "docker-tag",
                "repository": "manala/{{user `image`}}-{{user `image_env`}}-debian",
                "tag": "latest",
                "only": ["docker"]
            }
        ]
    ]
}
