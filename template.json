{
    "variables": {
        "name"        : "app-dev-debian",
        "description" : "App - Dev - Debian",
        "version"     : "3.0.1"
    },
    "builders": [
        {
            "name"                 : "virtualbox",
            "type"                 : "virtualbox-iso",
            "guest_os_type"        : "Debian_64",
            "format"               : "ovf",
            "headless"             : true,
            "iso_urls"             : [
                "http://cdimage.debian.org/debian-cd/8.4.0/amd64/iso-cd/debian-8.4.0-amd64-netinst.iso"
            ],
            "iso_checksum"         : "8d52d1b7789cd5a464aae719f05299ec",
            "iso_checksum_type"    : "md5",
            "disk_size"            : 65536,
            "hard_drive_interface" : "sata",
            "ssh_username"         : "root",
            "ssh_wait_timeout"     : "30m",
            "shutdown_command"     : "/sbin/shutdown -h now",
            "http_directory"       : "http",
            "boot_command"         : [
                "<esc><wait>",
                "install <wait>",
                "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
                "debian-installer=en_US <wait>",
                "auto <wait>",
                "locale=en_US <wait>",
                "kbd-chooser/method=us <wait>",
                "netcfg/get_hostname=debian <wait>",
                "netcfg/get_domain= <wait>",
                "fb=false <wait>",
                "debconf/frontend=noninteractive <wait>",
                "console-setup/ask_detect=false <wait>",
                "console-keymaps-at/keymap=us <wait>",
                "keyboard-configuration/xkb-keymap=us <wait>",
                "<enter><wait>"
            ],
            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--memory", "1024"],
                ["modifyvm", "{{.Name}}", "--cpus", "1"]
            ],
            "vm_name": "{{user `name`}}"
        },
        {
            "name"        : "docker",
            "type"        : "docker",
            "image"       : "debian:jessie",
            "export_path" : "{{user `name`}}-{{user `version`}}-docker.tar"
        }
    ],
    "provisioners": [
        {
            "type"    : "shell",
            "scripts" : [
                "scripts/apt.sh",
                "scripts/ansible.sh"
            ]
        },
        {
            "type"    : "shell",
            "scripts" : [
                "scripts/nfs.sh",
                "scripts/grub.sh",
                "scripts/bzip2.sh",
                "scripts/virtualbox.sh"
            ],
            "only"    : ["virtualbox"]
        },
        {
            "type"            : "ansible-local",
            "playbook_file"   : "ansible/playbook.yml",
            "playbook_dir"    : "ansible",
            "extra_arguments" : [
                "--extra-vars '_description=\"{{user `description`}}\" _version=\"{{user `version`}}\" _type=\"{{build_name}}\"'"
            ]
        },
        {
            "type"    : "shell",
            "scripts" : [
                "scripts/clean.sh"
            ]
        },
        {
            "type"    : "shell",
            "scripts" : [
                "scripts/clean-virtualbox.sh"
            ],
            "only"    : ["virtualbox"]
        }
    ],
    "post-processors": [
        [
            {
                "type"              : "vagrant",
                "output"            : "{{user `name`}}-{{user `version`}}-virtualbox.box",
                "compression_level" : 9,
                "only"              : ["virtualbox"]
            }
        ]
    ]
}
